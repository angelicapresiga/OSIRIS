@page
@model ReporteAccidente.App.Frontend.Pages.BuscarAccidenteModel
@{
}

<form method="post" >
  <div class="mb-3">
    <label  class="form-label">Id</label>
    <input  class="form-control"   asp-for="accidente.Id" >
  </div>
  <button class="btn btn-primary" type="submit" > 
    <i class="bi bi-search"></i> Buscar
  </button>
 
</form>

<h3>Accidente</h3>
<input type="hidden" asp-for="accidente.Id"/>
     
    <div class="form-group">
        <label asp-for="accidente.IdAgente"></label>
        <input asp-for="accidente.IdAgente" class="form-control" disabled>
        
    </div>
    
    <div class="form-group">
        <label asp-for="accidente.Latitud"></label>
        <input asp-for="accidente.Latitud" class="form-control" disabled>
       
    </div>
    
    <div class="form-group">
        <label asp-for="accidente.Longitud"></label>
        <input asp-for="accidente.Longitud" class="form-control" disabled>
       
    </div>
    
    <div class="form-group">
        <label asp-for="accidente.Direccion"></label>
        <input asp-for="accidente.Direccion" class="form-control" disabled>
      
    </div>
     <div class="form-group">
        <label asp-for="accidente.Fecha"></label>
        <input asp-for="accidente.Fecha" class="form-control" disabled>
        
    </div>
      <div class="form-group">
        <label asp-for="accidente.Hora"></label>
        <input asp-for="accidente.Hora" class="form-control" disabled>
        
    </div>
    <h3>Agente</h3>

    <input type="hidden" asp-for="agente.Id"/>
    <div class="form-group">
         <div class="form-group">
        <label asp-for="agente.Nombre"></label>
        <input asp-for="agente.Nombre" class="form-control" disabled>
       
    </div>
    </div>
    <h3>Ciudadanos Implicados</h3>
    <table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Nombre</th>
      <th scope="col">Sexo</th>
      <th scope="col">Edad</th>
      <th scope="col">Tipo Agente Vial</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var ciudadano in Model.ciudadanos)
    {
        <tr>
            <td>@ciudadano.Id</td>
            <td>@ciudadano.Nombre</td>
            <td>@ciudadano.Sexo</td>
            <td>@ciudadano.Edad</td>
            <td>@ciudadano.TipoAgenteVial</td>
            
        </tr>
    }
      </tbody>
</table>
<h3>Vehiculos</h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Placa</th>
      <th scope="col">Marca</th>
      <th scope="col">Modelo</th>
     
    </tr>
  </thead>
  <tbody>
    @foreach (var vehiculo in Model.vehiculos)
    {
        <tr>
            <td>@vehiculo.Id</td>
            <td>@vehiculo.Placa</td>
            <td>@vehiculo.Marca</td>
            <td>@vehiculo.Modelo</td>
             </tr>
    }
  </tbody>
</table>
