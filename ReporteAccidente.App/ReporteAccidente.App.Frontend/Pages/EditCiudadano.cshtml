@page
@model ReporteAccidente.App.Frontend.Pages.EditCiudadanoModel
@{
}
<h2>Edicion </h2>
<form method="post" >
    <input type="hidden" asp-for="ciudadano.Id"/>
     
    <div class="form-group">
        <label asp-for="ciudadano.Nombre"></label>
        <input asp-for="ciudadano.Nombre" class="form-control">
    </div>
    
    <div class="input-group mb-3">
        <label class="input-group-text" for="inputGroupSelect01" asp-for="ciudadano.Sexo"></label>
        <select class="form-select" for="inputGroupSelect01" asp-for="ciudadano.Sexo">
            <option selected>Sin Definir</option>
            <option value="Masculino">Masculino</option>
            <option value="Femenino">Femenino</option>
            <option value="No Binario">No Binario</option>
        </select>
        <span class="text-danger" asp-validation-for="ciudadano.Sexo"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="ciudadano.Edad"></label>
        <input asp-for="ciudadano.Edad" class="form-control">
        <span class="text-danger" asp-validation-for="ciudadano.Edad"></span>
    </div>
    
    <div class="input-group mb-3">
        <label class="input-group-text" for="inputGroupSelect01" asp-for="ciudadano.TipoAgenteVial"></label>
        <select class="form-select" id="inputGroupSelect01" asp-for="ciudadano.TipoAgenteVial">
            <option selected>Sin Definir</option>
            <option value="Automovil">Automovil</option>
            <option value="Moto">Moto</option>
            <option value="Cicla">Cicla</option>
        </select>
         <span class="text-danger" asp-validation-for="ciudadano.TipoAgenteVial"></span>
    </div>
    <button type="submit" class="btn btn-primary">Editar</button>
</form>
<a asp-page="./ReporteCiudadano" class="btn-default">Reporte Ciudadanos</a>